#!/bin/sh

# files to pull from repo
read -r -d '' files <<'EOF'
.zshrc
Brewfile
mac
EOF

# install oh-my-zsh
sh -c "$(curl -fsSL https://raw.github.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"

# pull down gitster theme
mkdir -p ~/.oh-my-zsh/custom/themes/gitster/
cd ~/.oh-my-zsh/custom/themes/gitster/
curl --remote-name https://raw.github.com/shashankmehta/dotfiles/master/thesetup/zsh/.oh-my-zsh/custom/themes/gitster.zsh-theme

cd ~
for file in $(echo $files | sed -e 's/\n/ /') ; do
  curl --remote-name https://raw.github.com/jonthebastard/laptop/master/files/$file
done

/usr/bin/env bash mac 2>&1 | tee ~/laptop.log

. ~/.zshrc
